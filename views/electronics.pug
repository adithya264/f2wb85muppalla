extends layout

block content
  h1= title
  - let results=[{electronics_product:"Toaster", electronics_price:100, electronics_size:'small'},{electronics_product:"Micro Owen", electronics_price:20, electronics_size :'large'},{electronics_product :"Telivision", electronics_price :3690, electronics_size:"large"}]
  div(class="container-fluid")
  div(class="row")
    each value,index in results
      div(class="col-sm-2" onclick=`buy(${index})`)  #{value.electronics_product} electronics , price #{value.electronics_price}, with size #{value.electronics_size}
  script.
    function buy(index)
    {
      alert(`Your purchased Item ${index+1}`)
    }
    